{
  "manifest_version": 3,
  "name": "openQuote",
  "version": "0.2.4",
  "description": "Free & open-source tool for freight brokers to quote spot loads in the browser - in real-time. Built by ./freightCognition.",
  "action": {
    "default_title": "openQuote",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["sidePanel"]
}
