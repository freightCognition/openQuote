{
  "manifest_version": 3,
  "name": "Rate Calculator",
  "version": "1.0",
  "description": "Freight rate calculator for linehaul.ai",
  "action": {
    "default_title": "Rate Calculator",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["sidePanel"]
}